#!/bin/bash -eu

curl -fsSL -o /tmp/composer-install https://getcomposer.org/installer
php -f /tmp/composer-install
mv composer.phar /usr/local/bin/composer

vagrant box add laravel/homestead --provider virtualbox

pushd ~

git clone https://github.com/laravel/homestead.git .homestead
cd .homestead
git checkout v5.0.1

bash init.sh

popd

